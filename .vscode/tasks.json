{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with C++ 14",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++14",
                "-g",
                "-Wall",
                "${relativeFile}",
                "-o",
                "bin/bin"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run binary file",
            "type": "shell",
            "command": "./bin",
            "options": {
                "cwd": "${workspaceFolder}/bin/"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}